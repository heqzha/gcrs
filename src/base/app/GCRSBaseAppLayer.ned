package gcrs.src.base.app;
import org.mixim.base.modules.IBaseApplLayer;

simple GCRSBaseAppLayer like IBaseApplLayer{
    parameters:
        int headerLength = default(256 bit) @unit("bit");
        int MAXGEOBUFFERSIZE = default(10);
        double SELFMSGINTERVAL = default(0.1 s) @unit(s);
        double INDIVIDUALOFFSET = default(0.1s) @unit(s);
        bool ISONSCH = default(true);
        int PRIORITYCLASS = default(3);
        double OFFSET = default(900);
    	@class(GCRSBaseAppLayer);
    gates:
        input lowerLayerIn; // from netw layer
        output lowerLayerOut; // to netw layer
        input lowerControlIn;
        output lowerControlOut;
}
